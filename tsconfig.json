{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@db/*": ["db/*"],
      "@src/*": ["src/*"],
      "@app/*": ["app/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@typings/*": ["typings/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"]
    },
  }
}
